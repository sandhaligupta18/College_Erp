@model ModelAccessLayer.Assignment;



<section id="main-content">
    <section class=" wrapper">
        <div class="agile-grid">
            <div class="row">
                <h2 class="text-black p-3">Update Student Details</h2>
                <form enctype="multipart/form-data" asp-action="UpdateAssignment" class="mt-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-lg-6">
                        <section class="panel-body">
                            <div class="form-group">
                                <label asp-for="SubjectId" class="control-label"></label>
                                <input asp-for="SubjectId" class="form-control" />
                            </div>
                        </section>
                    </div>
                    <div class="col-lg-6">
                        <section class="panel-body">
                            <div class="form-group">
                                <label asp-for="Course" class="control-label"></label>
                                <input asp-for="Course" class="form-control" />
                                <span asp-validation-for="Course" class="text-danger"></span>
                            </div>

                        </section>
                    </div>

                    <div class="col-lg-6">
                        <section class="panel-body">

                            <div class="form-group">
                                <label asp-for="Branch" class="control-label"></label>
                                <input asp-for="Branch" class="form-control" />
                                <span asp-validation-for="Branch" class="text-danger"></span>
                            </div>


                        </section>
                    </div>
                    <div class="col-lg-6">
                        <section class="panel-body">

                            <div class="form-group">
                                <label asp-for="CompletionDate" class="control-label"></label>
                                <input asp-for="CompletionDate" class="form-control" />
                                <span asp-validation-for="CompletionDate" class="text-danger"></span>
                            </div>

                        </section>
                    </div>

                    <div class="col-lg-6">
                        <section class="panel-body">

                            <div class="form-group">
                                <label asp-for="FilePath" class="control-label"></label>
                                <input asp-for="FilePath" class="form-control" />
                                <span asp-validation-for="FilePath" class="text-danger"></span>
                            </div>

                        </section>
                    </div>

                    <div class="col-lg-6 mt-3 ">
                        <section class="panel-body ">

                            <div class="form-group  ">
                                <input type="submit" value="Update Details" class="btn btn-dark w-100 " />
                            </div>

                        </section>
                    </div>

                    <div class="col-lg-12 mt-2 ">
                        <section class="panel-body  ">

                            <div class="form-group  ">
                                <button class=" btn btn-light border-secondary border border-2 rounded-1 p-2 w-100 "><a class=" text-secondary  " asp-action="GetAllAssignment">Back To List</a></button>
                            </div>
                        </section>
                    </div>
                </form>
            </div>

        </div>
    </section>

</section>

<script type="text/javascript">
    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

