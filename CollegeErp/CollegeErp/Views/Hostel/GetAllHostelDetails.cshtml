@model IEnumerable<ModelAccessLayer.Hostel>


<section id="main-content">
    <section class="wrapper">
        <div class="table-agile-info">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Hostel  Details
                </div>

                <div class="table-responsive">
                    <p class="p-3">
                        <button class=" btn btn-light border-secondary border border-2 rounded-1 p-2 "><a class=" text-secondary  " asp-action="AddHostelUser">Add New Hostel User</a></button>

                    </p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.StudentName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EnrollNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.HostelName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RoomNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AllocationDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TotalFee)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SubmittedFee)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PendingFee)
                                </th>                              
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StudentName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EnrollNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HostelName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoomNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AllocationDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsActive)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TotalFee)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SubmittedFee)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PendingFee)
                                    </td>
                                  
                                    <td class="d-flex flex-row justify-content-around">
                                        <button class="btn btn-light border-secondary border border-2 rounded-1 ">
                                            @Html.ActionLink("Update", "UpdateHostelDetails", new { id = item.EnrollNo })
                                        </button>
                                        <button class="btn btn-light border-secondary border border-2 rounded-1 ms-1">
                                            @Html.ActionLink("Details", "GetHostelUser", new { id = item.EnrollNo })
                                        </button>

                                        <button class="btn btn-light border-secondary border border-2 rounded-1 ms-1">
                                            @Html.ActionLink("Remove", "DeleteHostelUser", new { id = item.EnrollNo })
                                        </button>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <footer class="panel-footer">
                    <div class="row">

                        <div class="col-sm-5 text-center">
                            <small class="text-muted inline m-t-sm m-b-sm">showing 20-30 of 50 items</small>
                        </div>
                        <div class="col-sm-7 text-right text-center-xs">
                            <ul class="pagination pagination-sm m-t-none m-b-none">
                                <li><a href=""><i class="fa fa-chevron-left"></i></a></li>
                                <li><a href="">1</a></li>
                                <li><a href="">2</a></li>
                                <li><a href="">3</a></li>
                                <li><a href="">4</a></li>
                                <li><a href=""><i class="fa fa-chevron-right"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </section>

</section>

