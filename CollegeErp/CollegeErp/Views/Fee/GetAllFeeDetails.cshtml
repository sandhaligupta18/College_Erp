@model IEnumerable<ModelAccessLayer.FeeStructure>

<section id="main-content">
    <section class="wrapper">
        <div class="table-agile-info">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Fee Details
                </div>

                <div class="table-responsive">
                    <p class="p-3">
                        <button class=" btn btn-light border-secondary border border-2 rounded-1 p-2 "><a class=" text-secondary  " asp-action="AddFee">Add New Fee Details</a></button>

                    </p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.StudentName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EnrollNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Course)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Branch)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ConcessionDiscount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TotalFees)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SubmittedFees)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PendingFees)
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StudentName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EnrollNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Course)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Branch)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ConcessionDiscount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TotalFees)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SubmittedFees)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PendingFees)
                                    </td>

                                    <td class="d-flex flex-row justify-content-around">
                                        <button class="btn btn-light border-secondary border border-2 rounded-1 ">
                                            @Html.ActionLink("Update", "UpdateFee", new { id = item.EnrollNo })
                                        </button>
                                        <button class="btn btn-light border-secondary border border-2 rounded-1 ms-1">
                                            @Html.ActionLink("Details", "GetFeeById", new { id = item.EnrollNo })
                                        </button>

                                        <button class="btn btn-light border-secondary border border-2 rounded-1 ms-1">
                                            @Html.ActionLink("Remove", "DeleteFee", new { id = item.EnrollNo })
                                        </button>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <footer class="panel-footer">
                    <div class="row">

                        <div class="col-sm-5 text-center">
                            <small class="text-muted inline m-t-sm m-b-sm">showing 20-30 of 50 items</small>
                        </div>
                        <div class="col-sm-7 text-right text-center-xs">
                            <ul class="pagination pagination-sm m-t-none m-b-none">
                                <li><a href=""><i class="fa fa-chevron-left"></i></a></li>
                                <li><a href="">1</a></li>
                                <li><a href="">2</a></li>
                                <li><a href="">3</a></li>
                                <li><a href="">4</a></li>
                                <li><a href=""><i class="fa fa-chevron-right"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </section>

</section>

