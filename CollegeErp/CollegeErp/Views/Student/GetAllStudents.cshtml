@model IEnumerable<ModelAccessLayer.StudentDetails>



<section id="main-content">
    <section class="wrapper">
        <div class="table-agile-info">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Student Details
                </div>
                
                <div class="table-responsive">
                    <p class="p-3">
                        <button class=" btn btn-light border-secondary border border-2 rounded-1 p-2 "><a class=" text-secondary  " asp-action="AddStudent">Add New Student</a></button>

                    </p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProfilePicture)
                                </th>
                                
                                <th>
                                    @Html.DisplayNameFor(model => model.FirstName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LastName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StudendId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EnrollNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateOfBirth)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Mobile)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Course)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Branch)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FatherName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FatherMobile)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MotherName)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        <img src="~/images/@item.ProfilePicture"
                                             class="rounded-circle"
                                             height="40" width="40"
                                             asp-append-version="true" />
                                    </td>

                                    <td>
                                     
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StudendId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EnrollNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mobile)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Course)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Branch)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FatherName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FatherMobile)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MotherName)
                                    </td>
                                    <td class="d-flex flex-row justify-content-around">
                                        <button class="btn btn-light border-secondary border border-2 rounded-1 ">
                                            @Html.ActionLink("Update", "UpdateStudent", new { id = item.StudendId })
                                        </button>
                                        <button class="btn btn-light border-secondary border border-2 rounded-1 ms-1">
                                            @Html.ActionLink("Details", "GetUserById", new { id = item.StudendId })
                                        </button>

                                        <button class="btn btn-light border-secondary border border-2 rounded-1 ms-1">
                                            @Html.ActionLink("Remove", "DeleteStudent", new { id = item.StudendId })
                                        </button>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <footer class="panel-footer">
                    <div class="row">

                        <div class="col-sm-5 text-center">
                            <small class="text-muted inline m-t-sm m-b-sm">showing 20-30 of 50 items</small>
                        </div>
                        <div class="col-sm-7 text-right text-center-xs">
                            <ul class="pagination pagination-sm m-t-none m-b-none">
                                <li><a href=""><i class="fa fa-chevron-left"></i></a></li>
                                <li><a href="">1</a></li>
                                <li><a href="">2</a></li>
                                <li><a href="">3</a></li>
                                <li><a href="">4</a></li>
                                <li><a href=""><i class="fa fa-chevron-right"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </section>
    
</section>
